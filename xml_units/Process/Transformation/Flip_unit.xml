<?xml version="1.0" encoding="UTF-8"?>
<!-- Image Calculator by Daniel Senff -->
            
<UnitDescription>

<General>
  <UnitName>Flip</UnitName> 
  <PathToIcon>Flip_Unit.png</PathToIcon> 
  
  <ImageJSyntax>run("Flip PARA_STRING_1", "STACK");</ImageJSyntax>
  <Color>0x6e91de</Color>
  <IconSize>BIG</IconSize>
  <HelpString>Resizes the image to the specified dimensions.</HelpString>  
</General>

<Parameters>
  	<Parameter>
  		<Name>Direction</Name>
  		<DataType as="radio">StringArray</DataType>
  		<Value>Horizontally;Vertically</Value>
  		<HelpString>Defines along which axis the images is flipped.</HelpString>
  		<ChoiceNumber>0</ChoiceNumber>
  	</Parameter>
</Parameters>

<Inputs> 
	<Input>
		<Name>Input</Name>
		<ShortName>I</ShortName>	
		<DataType>Image</DataType>
		<ImageType>31</ImageType>
		<NeedToCopyInput>true</NeedToCopyInput>
	</Input>
</Inputs>

<Outputs> 
	<Output>
		<Name>Output</Name>
		<ShortName>O</ShortName>	
		<DataType>Image</DataType>
		<ImageType>-1</ImageType>
		<DoDisplay>false</DoDisplay>
	</Output>
</Outputs>

</UnitDescription>

