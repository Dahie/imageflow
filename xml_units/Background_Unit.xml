<?xml version="1.0" encoding="UTF-8"?>
<!-- Background unit element -->

<UnitDescription>

<General>
  <UnitName>Background</UnitName>
  <PathToIcon></PathToIcon>
  <ImageJSyntax>newImage("Background", "PARA_STRING_1 PARA_BOOLEAN_1", PARA_INTEGER_1, PARA_INTEGER_2, 1);</ImageJSyntax>
  <Color>0x9cba92</Color>
  <HelpString>Creates a new Background of defined size</HelpString>

</General>

<Parameters>
  	<Parameter>
  		<Name>Width</Name>
  		<DataType>integer</DataType>
  		<Value>256</Value>
  		<HelpString>Width of the background</HelpString>
  	</Parameter>

  	<Parameter>
  		<Name>Height</Name>
  		<DataType>integer</DataType>
  		<Value>256</Value>
  		<HelpString>Height of the background</HelpString>
  	</Parameter>
  	<Parameter>
  		<Name>Bit depth</Name>
  		<DataType>StringArray</DataType>
  		<Value>8-bit;16-bit;32-bit;RGB</Value>
  		<HelpString>Defines the bit depth of the new image background.</HelpString>
  		<ChoiceNumber>0</ChoiceNumber>
	</Parameter>
  	<Parameter>
  		<Name>Black background</Name>
  		<DataType>boolean</DataType>
  		<Value>false</Value>
  		<HelpString>Set background color to black.</HelpString>
  		<TrueString>Black</TrueString>
	</Parameter>
	
</Parameters>

<Outputs>
	<Output>
		<Name>Output</Name>
		<ShortName>O</ShortName>
		<DataType>Image</DataType>
		<ImageType>-1</ImageType>
		<DoDisplay>false</DoDisplay>
	</Output>
</Outputs>

</UnitDescription>