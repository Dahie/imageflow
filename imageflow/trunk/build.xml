<?xml version="1.0" encoding="UTF-8"?>
<project default="create_run_jar" name="Create Runnable Jar for ImageFlow">
<!--this file was created by Eclipse Runnable JAR Export Wizard-->
<!--ANT 1.7 is required                                        -->
	<property name="bin.dir" location="${basedir}/bin" /> 
	<property name="src.dir" location="${basedir}/src" /> 
	<property name="build.dir" location="${basedir}/build" />
	<property name="units.dir" location="${basedir}/xml_units" />
	<property name="icons.dir" location="${basedir}/xml_icons" />
	<property name="doc.dir" location="${basedir}/doc/release" />
	<property name="example.dir" location="${basedir}/xml_flows" />
	
	 <target name="copy" description="Delete old build and dist directories">
	    <delete dir="${build.dir}"/>
	 	<mkdir dir="${build.dir}" />
	 	<mkdir dir="${build.dir}/Imageflow" />
	 	<copy todir="${build.dir}/Imageflow" file="${basedir}/ImageFlow" />
	 	
	 	
	 	<mkdir dir="${build.dir}/Imageflow/xml_units" />
	 	<copy todir="${build.dir}/Imageflow/xml_units">
	 		<fileset dir="${units.dir}" />
	 	</copy>
	 	
	 	<mkdir dir="${build.dir}/Imageflow/xml_icons" />
	 	<copy todir="${build.dir}/Imageflow/xml_icons">
	 		<fileset dir="${icons.dir}" />
	 	</copy>
	 	
	 	<mkdir dir="${build.dir}/Imageflow/doc" />
	 	<copy todir="${build.dir}/Imageflow/doc">
	 			<fileset dir="${doc.dir}" />
	 	</copy>
	 	
	 	<mkdir dir="${build.dir}/Imageflow/xml_flows" />
	 	<copy todir="${build.dir}/Imageflow/xml_flows">
	 			<fileset dir="${example.dir}" />
	 	</copy>
	 	
	  </target>
	
	<target name="create_run_jar" depends="copy">
		<jar destfile="${build.dir}/Imageflow/Imageflow_.jar" filesetmanifest="mergewithoutmain">
			<manifest>
				<attribute name="Built-By" value="${user.name}"/>
				<attribute name="Main-Class" value="de.danielsenff.imageflow.ImageFlow"/>
				<attribute name="Class-Path" value="."/>
			</manifest>
			<fileset dir="${bin.dir}"/>
			<zipfileset excludes="META-INF/*.SF" src="${basedir}/lib/ij.jar"/>
			<!--<zipfileset excludes="META-INF/*.SF" src="${basedir}/lib/junit-4.5.jar"/>-->
			<!--<fileset dir="${basedir}/../visualap11branch/bin" excludes="**/test/**, *.wav, *.pdf" />-->
			<zipfileset excludes="META-INF/*.SF" src="${basedir}/lib/jdom.jar"/>
			<zipfileset excludes="META-INF/*.SF" src="${basedir}/lib/appframework-1.0.3.jar"/>
			<zipfileset excludes="META-INF/*.SF" src="${basedir}/lib/swing-worker-1.1.jar"/>
			<zipfileset excludes="META-INF/*.SF" src="${basedir}/lib/swing-layout-1.0.3.jar"/>
		</jar>
	</target>
</project>
