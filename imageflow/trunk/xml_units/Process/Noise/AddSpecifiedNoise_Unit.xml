<?xml version="1.0" encoding="UTF-8"?>
<!--This is the unit to add noise to an image. (No parameters to be set.)-->
            
<UnitDescription>

<General>
  <UnitName>Add Specified Noise</UnitName> 
  <PathToIcon>AddNoise_Unit.png</PathToIcon> 
  <ImageJSyntax>run("Add Specified Noise...", "standard=PARA_DOUBLE_1" PARA_BOOLEAN_1);</ImageJSyntax>
   
  <Color>0x6e91de</Color>
  <HelpString>Adds noise to an image</HelpString>
</General>

<Parameters>
  	<Parameter>
  		<Name>Standard Deviation</Name>
  		<DataType>double</DataType>
  		<Value>25</Value>
  		<HelpString>Defines the Standard Deviation of Noise added.</HelpString>
  	</Parameter> 
  	<Parameter>
  		<Name>Stack</Name>
  		<DataType>boolean</DataType>
  		<Value>false</Value>
  		<HelpString>Stack support</HelpString>
  		<TrueString>, "stack"</TrueString>
  	</Parameter> 
</Parameters>

<Inputs> 
	<Input>
		<Name>Input</Name>
		<ShortName>I</ShortName>	
		<DataType>Image</DataType>
		<ImageType>31</ImageType>
		<NeedToCopyInput>true</NeedToCopyInput>
	</Input>
</Inputs>

<Outputs> 
	<Output>
		<Name>Output</Name>
		<ShortName>O</ShortName>	
		<DataType>Image</DataType>
		<ImageType>-1</ImageType>
		<DoDisplay>false</DoDisplay>
	</Output>
</Outputs>

</UnitDescription>