<?xml version="1.0" encoding="UTF-8"?>
            
<UnitDescription>

<General>
  <UnitName>Translate</UnitName> 
  <PathToIcon>Translate_Unit.png</PathToIcon> 
  
  <ImageJSyntax>run("Translate...", "x=" + ATTRIBUTE_INPUT_2_PARAMETER_1 + " y=" + ATTRIBUTE_INPUT_3_PARAMETER_2 + " STACK");</ImageJSyntax>
  <Color>0x6e91de</Color>
  <IconSize>BIG</IconSize>
  <HelpString>Resizes the image to the specified dimensions.</HelpString>  
</General>

<Parameters>
  	<Parameter>
  		<Name>X-Offset in pixels</Name>
  		<DataType>integer</DataType>
  		<Value>15</Value>
  		<HelpString>Specifies how many pixels the current image is moved along the x-axis.</HelpString>
  	</Parameter>
  	<Parameter>
  		<Name>Y-Offset in pixels</Name>
  		<DataType>integer</DataType>
  		<Value>15</Value>
  		<HelpString>Specifies how many pixels the current image is moved along the y-axis.</HelpString>
  	</Parameter>
</Parameters>

<Inputs> 
	<Input>
		<Name>Input</Name>
		<ShortName>I</ShortName>	
		<DataType>Image</DataType>
		<ImageType>63</ImageType>
		<NeedToCopyInput>true</NeedToCopyInput>
	</Input>
	<Input>
		<Name>X-Offset</Name>
		<ShortName>X</ShortName>
		<Required>false</Required>
		<DataType>Integer</DataType>
		<NeedToCopyInput>false</NeedToCopyInput></Input>
	<Input>
		<Name>Y-Offset</Name>
		<ShortName>Y</ShortName>
		<Required>false</Required>
		<DataType>Integer</DataType>
		<NeedToCopyInput>false</NeedToCopyInput></Input>
</Inputs>

<Outputs> 
	<Output>
		<Name>Output</Name>
		<ShortName>O</ShortName>	
		<DataType>Image</DataType>
		<ImageType>-1</ImageType>
		<DoDisplay>false</DoDisplay>
	</Output>
</Outputs>

</UnitDescription>

